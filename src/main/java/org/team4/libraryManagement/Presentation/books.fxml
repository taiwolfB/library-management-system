<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXComboBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.team4.libraryManagement.Presentation.BooksController"
            prefHeight="400.0" prefWidth="600.0">
    <left>
        <VBox alignment="TOP_CENTER" spacing="20" >
            <padding>
                <Insets bottom="30" top="30" left="20" right="20"/>
            </padding>
            <JFXButton text="CREATE NEW" onAction="#createNewBook" styleClass="m-button" prefWidth="150"/>
            <JFXButton text="OVERDUE BOOKS" onAction="#showOverdueBooks" styleClass="m-button" prefWidth="150"/>
            <JFXButton text="LEND BOOK" onAction="#lendBook" styleClass="m-button" prefWidth="150" fx:id="lendBookButton" disable="true" />
            <JFXButton text="RETURN BOOK" onAction="#returnBook" styleClass="m-button" prefWidth="150" fx:id="returnBookButton" disable="true"/>
            <JFXButton text="UPDATE BOOK" onAction="#updateBook" styleClass="m-button" prefWidth="150" fx:id="updateBookButton" disable="true"/>
            <Region prefHeight="40" VBox.vgrow="ALWAYS"/>

            <JFXButton text="DELETE BOOK" onAction="#deleteBook" styleClass="m-error-button" prefWidth="150" fx:id="deleteBookButton" disable="true"/>
        </VBox>
    </left>
    <center>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" spacing="20">
                    <padding>
                        <Insets bottom="20" top="20" left="30" right="30"/>
                    </padding>
                    <JFXTextField fx:id="searchBar" styleClass="m-textField" prefHeight="20" prefWidth="350"/>
                    <JFXButton text="SEARCH" onAction="#searchBook" styleClass="m-button" prefWidth="100" prefHeight="20"/>
                    <Region prefWidth="40" HBox.hgrow="ALWAYS"/>
                    <Label text="search by "/>
                    <JFXComboBox styleClass="m-combo" fx:id="comboBox" />
                </HBox>
            </top>
            <center>
                <ScrollPane fitToWidth="true" styleClass="m-scrollpane">
                    <VBox spacing="20" alignment="TOP_CENTER" fx:id="bookContainer">
                        <padding>
                            <Insets bottom="20" top="20" left="30" right="30"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>
